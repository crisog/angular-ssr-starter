pipeline {
  agent any
 
  tools {nodejs "regular-js"}
 
  stages {
    stage('Checkout SCM'){
        steps{
                git branch: 'SP7', url: 'https://github.com/crisog/angular-ssr-starter.git'
        }
       }

        stage('Install node modules'){
            steps {
                sh "npm install"
            }
                
            }
        stage('Build'){
            steps {
                sh "npm run build:ssr"
            }
                
            }
  }
}